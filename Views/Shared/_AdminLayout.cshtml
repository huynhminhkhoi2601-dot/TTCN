@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trang Quản Trị</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site2.css"></link>
</head>
<body>
    <!-- 1. Menu (Sidebar) của Admin -->
    <div class="admin-sidebar shadow">
        <h4 class="text-center text-white mb-3" style="font-weight: 700;">Admin Panel</h4>
        <nav class="nav flex-column">

            <!-- Link Quản lý Phim -->
            <!-- (Kiểm tra và active link dựa trên Controller) -->
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Phim" ? "active" : "")"
               asp-controller="Phim" asp-action="Index">
                <i class="fas fa-film fa-fw me-2"></i> Quản lý Phim
            </a>

            <!-- Link Quản lý Users -->
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")"
               asp-controller="Users" asp-action="Index">
                <i class="fas fa-users fa-fw me-2"></i> Quản lý User
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "SuatChieu" ? "active" : "")"
               href="#">

                <i class="fas fa-calendar-alt fa-fw me-2"></i> Quản lý Suất Chiếu
            </a>

            <hr class="text-secondary">
            <a class="nav-link" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home fa-fw me-2"></i> Quay lại Trang chủ
            </a>
        </nav>
    </div>

    <div class="admin-content">
        <header class="admin-header">
            <h3>@ViewData["Title"]</h3>
            <div>
                <span class="me-3">
                    Chào,
                    <strong>@HttpContextAccessor.HttpContext.Session.GetString("UserHoTen")</strong>
                    (Admin)
                </span>
                <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-sm">
                    Đăng xuất <i class="fas fa-sign-out-alt ms-1"></i>
                </a>
            </div>
        </header>

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>