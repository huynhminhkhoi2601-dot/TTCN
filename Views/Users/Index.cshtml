@using TTCN.Models
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý Người dùng";
    var danhSachUsers = ViewBag.p as IEnumerable<User>
    ;
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách Tài khoản</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-dark">
                        <tr>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Mật khẩu</th>
                            <th>Số điện thoại</th>
                            <th>Vai trò</th>
                            <th>Ngày tạo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (danhSachUsers != null && danhSachUsers.Any())
                        {
                            @foreach (var item in danhSachUsers)
                            {
                                <tr>
                                    <td>@item.HoTen</td>
                                    <td>@item.Email</td>
                                    <td>@item.MatKhau</td>
                                    <td>@item.SoDienThoai</td>
                                    <td>
                                        @if (item.VaiTro == "Admin")
                                        {
                                            <span class="badge bg-danger">@item.VaiTro</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@item.VaiTro</span>
                                        }
                                    </td>
                                    <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-danger">Không tìm thấy tài khoản nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
